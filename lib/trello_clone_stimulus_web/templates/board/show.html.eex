<h2><%= @board.name %></h2>

<div class="board">
  <%= for lane <- @board.lanes do %>
    <div class="lane">
      <h3><%= lane.title %></h3>
        <%= for panel <- lane.panels do %>
          <div class="my-panel">
            <h4><%= panel.title %></h4>
            <p><%= panel.content %></p>
          </div>
        <% end %>
    </div>
  <% end %>
</div>

<span><%= link "Edit", to: board_path(@conn, :edit, @board) %></span>
<span><%= link "Back", to: board_path(@conn, :index) %></span>
